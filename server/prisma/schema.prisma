// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id           Int      @id @default(autoincrement())
  name         String
  phone_num    String   @unique
  email        String   @unique
  password     String
  transactions Json?
  high_spender Boolean?

  @@index([phone_num])
}
